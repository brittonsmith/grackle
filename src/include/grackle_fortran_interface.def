         TYPE(C_PTR) :: HDII_density
         TYPE(C_PTR) :: HeHII_density
         TYPE(C_PTR) :: CI_density 
         TYPE(C_PTR) :: CII_density 
         TYPE(C_PTR) :: CO_density 
         TYPE(C_PTR) :: CO2_density 
         TYPE(C_PTR) :: OI_density 
         TYPE(C_PTR) :: OH_density 
         TYPE(C_PTR) :: H2O_density 
